<div>
    <div class="card">
        <h2>Create a New Post:</h2>
        <form class="new-post post-form">
            <div>
                <label>Post Title:</label>
                <input type="text" id="title">
            </div>
            <div>
                <label>Post Text:</label><br>
                <textarea rows="10" cols="149" id="text"></textarea>
            </div>
            <div>
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>

    {{#if projects.length}}
    <div class="post-list">
        <h2>Your Posts:</h2>
        {{#each posts as |post|}}
        <div class="card">
            <div class="post-title">
                <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
                <p>{{post.date_created}}</p>
            </div>
            <div>
                <p>{{post.text}}</p>
            </div>
            <div>
                <button data-id="{{project.id}}">Delete</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>